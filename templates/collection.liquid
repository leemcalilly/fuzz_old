<div id="interior_wrap">
  <section id="main">
    {% paginate collection.products by 12 %}
      <div id="intro">
        <h1 class="title">{{ collection.title | escape }}</h1>
    
        {% if collection.description.size > 0 %}
          {{ collection.description }}
        {% endif %}
      </div><!-- end intro-->

      {% if collection.products.size > 0 %}
        <ul id="products" class="clear">
          {% for product in collection.products %}
            <li{% cycle '', '', ' class="end"' %}>
              <div class="image">
                <div class="align">
                  <a href="{{ product.url | within: collection }}">
                    <img src="{{ product.images[0] | product_img_url: "compact" }}" alt="{{ product.title | escape }}" />
                  </a>
                </div><!-- end align -->
              </div><!-- end image -->
          
              <h3>
                <a href="{{ product.url | within: collections }}">{{ product.title }}</a>
              </h3>
              
              <h4>
                {{ product.price | money }}
                
                {% if product.compare_at_price_max > product.price %} 
                  <del>{{ product.compare_at_price_max | money }}</del>
                {% endif %}
              </h4>
              
              <h5><a href="{{ product.url | within: collections }}">View</a></h5>
            </li>
          {% endfor %}
        </ul><!-- end products-->
    
        {% if paginate.pages > 1 %}
          <div id="paginate">
            {{ paginate | default_pagination }}
          </div><!-- end paginate -->
        {% endif %}
        
      {% else %}
        <p id="empty">There are no products in this collection.</p>
      {% endif %}
    {% endpaginate %}
  </section><!-- main -->
</div> <!-- interior_wrap -->
