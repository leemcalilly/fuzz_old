<div id="interior_wrap">
<section id="main">
{% layout settings.customer_layout %}

<section id="content" class="cf">
  <div id="customer_wrap" class="cf g1">
    <div id="customer" class="cf">
      <h2 class="title">Customer Login</h2>

      {% form 'customer_login' %}
        {{ form.errors | default_errors }}

        <fieldset id="login_email">
          <label for="customer_email" class="login">Email Address</label>
          <input type="email" value="" name="customer[email]" id="customer_email" class="large" size="30" />
        </fieldset>

        {% if form.password_needed %}

          {% comment %}
            <p>Customer Account Login</p>
          {% endcomment %}

          <div id="login_password">
            <fieldset>
              <label for="customer_password" class="login">Password</label>
              <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
            </fieldset>
          
            <div id="forgot_password">
              <a href="#" onclick="showRecoverPasswordForm()">Forgot your password?</a>
            </div>
          </div>

        {% endif %}

        <div class="action_bottom">
          <input class="button" type="submit" value="Sign In" />
          <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
        </div>
      {% endform %}
    </div><!-- end customer -->
  </div><!--end customer_wrap -->

  {% comment %}
    Recover Password Form
  {% endcomment %}

  <div id="recover_password_wrap" class="cf g1">
    <div id="recover-password"  style='display:none'>
      <h2>Reset Password</h2>
      <p>We will send you an email to reset your password.</p>

      {% form 'recover_customer_password' %}
        {{ form.errors | default_errors }}

        <fieldset id="recover_email">
          <label for="email" class="large">Email</label>
          <input type="email" value="" size="30" name="email" id="recover-email" class="large" />
        </fieldset>
      
        <fieldset class="action_bottom">
          <input class="button" type="submit" value="Submit" />
          <span class="note">or <a href="#" onclick="hideRecoverPasswordForm()">Cancel</a></span>
        </fieldset>
      {% endform %}
    </div><!-- end recover-password -->
  </div><!--end recover_password_wrap -->

  {% comment %}
    <p>Guest Login form for shops with optional customer accounts. This form is displayed only when users click on the checkout link on the cart page.</p>
  {% endcomment %}
  
  {% if shop.checkout.guest_login %}
  <div id="guest_wrap" class="cf g2">
    <div id="guest" class="cf">
      <div class="template_header">
        <h3 class="title">Guest Login</h3>
      </div>
      {% form 'guest_login' %}
        <input class="button" type="submit" value="Continue as Guest" />
      {% endform %}
    </div><!-- end guest -->
    {% endif %}
  </div><!-- end guest_wrap-->
</section><!-- end content -->


<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'inline-block';
    document.getElementById('customer').style.display='none';
    return false;
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('customer').style.display = 'inline-block';
    return false;
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
</section><!-- end main -->
</div><!-- end interior_wrap -->